    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="textFieldId" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Felhasználónév:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="textFieldUsername" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="textFieldRole" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button onAction="#handleAddButton" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #555555, #333333);" text="Hozzáadás" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="3" />
