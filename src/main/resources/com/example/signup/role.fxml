        <font>
            <Font name="Georgia" size="18.0" />
        </font>
    </Button>

    <TableView fx:id="tableViewRoles" prefHeight="475.0" prefWidth="460.0" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <columns>
            <TableColumn fx:id="columnId" text="ID" />
            <TableColumn fx:id="columnUsername" text="Felhasználónév" />
            <TableColumn fx:id="columnRole" text="Role" />
        </columns>
    </TableView>
</GridPane>
