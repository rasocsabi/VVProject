<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.signup.ProjectCalculatorController">
    <children>
        <VBox spacing="10" prefWidth="400" prefHeight="400" layoutX="100" layoutY="100">
            <HBox spacing="10">
                <Label text="Project Name:"/>
                <TextField fx:id="projectNameField"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Add User" onAction="#handleAddUserButton"/>
                <Button text="Remove User" onAction="#handleRemoveUserButton"/>
            </HBox>
            <HBox spacing="10">
                <ListView fx:id="userList" prefWidth="150" prefHeight="200"/>
                <ListView fx:id="hoursWorkedListView" prefWidth="150" prefHeight="200"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Calculate" onAction="#handleCalculateButton"/>
            </HBox>
            <TextArea fx:id="resultTextArea" prefWidth="300" prefHeight="150" editable="false"/>
        </VBox>
        <Button fx:id="Button_Back" alignment="CENTER" contentDisplay="CENTER" layoutX="440.0" layoutY="356.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: Grey;" text="Back" textFill="WHITE">
            <font>
                <Font name="Calibri Bold" size="18.0" />
            </font>
        </Button>
        <Button text="Search Members" layoutX="240.0" layoutY="256.0" onAction="#handleSearchMembers"/>
    </children>
</AnchorPane>
