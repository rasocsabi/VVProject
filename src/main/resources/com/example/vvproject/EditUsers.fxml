<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vvproject.EditUsersController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Felhasználók szerkesztése">
        <font>
            <Font size="20"/>
        </font>
    </Label>
    <TableView fx:id="usersTable">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Felhasználónév" />
            <TableColumn fx:id="groupColumn" text="Csoport" />
            <TableColumn fx:id="deleteColumn" text="Törlés" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="usernameField" promptText="Felhasználónév"/>
        <ChoiceBox fx:id="groupChoiceBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String>Csoport 1</String>
                    <String>Csoport 2</String>
                </FXCollections>
            </items>
            <defaultValue>Csoport 1</defaultValue>
        </ChoiceBox>
        <Button text="Hozzáadás" onAction="#onAddButtonClicked"/>
    </HBox>
    <Button text="Mentés" onAction="#onSaveButtonClicked" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" alignment="BOTTOM_RIGHT"/>
    <Label fx:id="messageLabel"/>
</VBox>