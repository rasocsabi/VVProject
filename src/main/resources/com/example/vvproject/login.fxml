<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="440.0" prefWidth="623.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.vvproject.LoginController">
    <ImageView fitHeight="451.0" fitWidth="386.0">
        <Image url="@img/bg.jpg"/>
    </ImageView>
    <Label layoutX="442.0" layoutY="147.0" style="-fx-font-size: 14pt; -fx-text-fill: #333333;" text="Login">
        <font>
            <Font name="Bell MT Italic" size="20.0"/>
        </font>
    </Label>
    <TextField fx:id="usernameField" layoutX="442.0" layoutY="197.0" promptText="Username"
               style="-fx-background-color: #f2f2f2; -fx-border-color: #e6e6e6; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 5px;"/>
    <PasswordField fx:id="passwordField" layoutX="442.0" layoutY="245.0" promptText="Password"
                   style="-fx-background-color: #f2f2f2; -fx-border-color: #e6e6e6; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 5px;"/>
    <Button fx:id="loginButton" layoutX="442.0" layoutY="301.0" mnemonicParsing="false" onAction="#onLoginButtonClicked"
            prefHeight="27.0" prefWidth="83.0"
            style="-fx-background-color: #3366CC; -fx-text-fill: #ffffff; -fx-border-color: #2d5da7; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 5px 10px; -fx-font-size: 12px;"
            text="Login"/>
    <Button fx:id="registerButton" layoutX="442.0" layoutY="342.0" mnemonicParsing="false"
            onAction="#handleRegistration" prefHeight="11.0" prefWidth="83.0"
            style="-fx-background-color: #f2f2f2; -fx-text-fill: #333333; -fx-border-color: #e6e6e6; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 5px 10px; -fx-font-size: 10pt;"
            text="Sign in" textAlignment="CENTER">
        <font>
            <Font size="10.0"/>
        </font>
    </Button>
    <Label fx:id="messageLabel" layoutX="56.0" layoutY="160.0" prefWidth="208.0"
           style="-fx-font-size: 12pt; -fx-text-fill: #333333;"/>
</AnchorPane>
